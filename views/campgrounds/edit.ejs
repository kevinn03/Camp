<% layout("layouts/boilerplate") %>
<h1><%= campgrounds.title %></h1>

<form
  action="/campgrounds/<%= campgrounds._id%>?_method=patch "
  method="post"
  novalidate
  class="validated-form"
>
  <div class="mb-3">
    <label class="form-label" for="title">Title:</label>
    <input
      class="form-control"
      type="text"
      id="title"
      name="title"
      value="<%= campgrounds.title%>"
      required
    />
  </div>

  <div class="mb-3">
    <label class="form-label" for="price">Price:</label>
    <div class="input-group">
      <span class="input-group-text" id="price-label">$</span>
      <input
        name="price"
        id="price"
        type="text"
        class="form-control"
        placeholder="0.00"
        aria-label="price"
        aria-describedby="price-label"
        value="<%= campgrounds.price%>"
        required
      />
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="locationC">City:</label>
    <input
      class="form-control"
      type="text"
      id="locationC"
      name="locationC"
      value="<%= locArr[0]%>"
      required
    />
  </div>

  <div class="mb-3">
    <label class="form-label" for="locationP">Province:</label>
    <input
      class="form-control"
      type="text"
      id="locationP"
      name="locationP"
      value="<%= locArr[1]%>"
      required
    />
  </div>

  <div class="mb-3">
    <label class="form-label" for="image">Image:</label>
    <input
      class="form-control"
      type="text"
      id="image"
      name="image"
      value="<%= campgrounds.image%>"
      required
    />
  </div>
  <div class="mb-3">
    <label class="form-label" for="description">Description:</label>
    <textarea
      class="form-control"
      type="text"
      id="description"
      name="description"
      required
    >
<%= campgrounds.description%></textarea
    >
  </div>

  <div class="mb-3">
    <button class="btn btn-info">Update Campground</button>
  </div>
  <a href="/campgrounds/<%= campgrounds._id%>">Back to Campground</a>
</form>
