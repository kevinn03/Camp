<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= campgrounds.title %></title>
  </head>
  <body>
    <h1><%= campgrounds.title %></h1>

    <form
      action="/campgrounds/<%= campgrounds._id%>?_method=patch "
      method="post"
    >
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= campgrounds.title%>"
      />
      <br />
      <label for="price">Price:</label>
      <input
        type="text"
        id="price"
        name="price"
        value="<%= campgrounds.price%>"
      />
      <br />
      <label for="description">Description:</label>
      <input
        type="text"
        id="description"
        name="description"
        value="<%= campgrounds.description%>"
      />
      <br />
      <label for="locationC">City:</label>
      <input
        type="text"
        id="locationC"
        name="locationC"
        value="<%=locArr[0]%>"
      />

      <label for="locationP">Province:</label>
      <input
        type="text"
        id="locationP"
        name="locationP"
        value="<%=locArr[1]%>"
      />
      <br />
      <button>Submit</button>
    </form>
  </body>
</html>
