<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= campgrounds.image%>" class="card-img-top" alt="" />
      <div class="card-body">
        <h5 class="card-title"><%= campgrounds.title%></h5>
        <p class="card-text"><%= campgrounds.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= campgrounds.location%></li>
        <li class="list-group-item">$<%= campgrounds.price%>/night</li>
      </ul>
      <div class="card-body">
        <a
          href="/campgrounds/<%= campgrounds._id%>/edit"
          class="card-link btn btn-info"
          >Edit</a
        >
        <form
          class="d-inline"
          method="post"
          action="/campgrounds/<%= campgrounds._id%>?_method=Delete"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <h2>Leave a Review</h2>
    <form
      action="/campgrounds/<%= campgrounds._id %>/reviews"
      class="mb-b"
      method="post"
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="4"
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
